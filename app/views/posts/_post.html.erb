<div class="post">

  <h2 class="post-title"><%= link_to post.title, post %></h2>

  <div class="post-date"><%= human_date post.date %></div>

  <div class="post-tags">
    <% post.tags.each do |tag| %>
      <span class="tag">
        <%= link_to "##{tag.name}", posts_path(tag: tag.name) %>
      </span>
    <% end %>
  </div>

  <div class="post-body"><%= post.body.html_safe %></div>

</div>
